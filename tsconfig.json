{
  "compilerOptions": {
    "target": "es5",                                  
    "module": "es2020",
    "lib": ["es2016", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/js",
  },
  "include": [
    "src/ts/**/*.ts"
  ]
}